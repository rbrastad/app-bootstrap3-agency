<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
    <display-name>Team</display-name>
    <config>
        <item-set name="menuComponent">
            <label>Menu</label>
            <items>
                <input name="showInMenu" type="CheckBox">
                    <label>Show in menu</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
            <occurrences minimum="1" maximum="1"/>
        </item-set>
        <item-set name="teamHeading">
            <label>Header</label>
            <items>
                <input name="title" type="TextLine">
                    <label>Title</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input name="preface" type="TextLine">
                    <label>Short preface</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input name="footer" type="TextLine">
                    <label>Footer text</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
            <occurrences minimum="1" maximum="1"/>
        </item-set>

        <item-set name="person">
            <label>Person</label>
            <immutable>false</immutable>
            <custom-text/>
            <help-text></help-text>
            <occurrences minimum="1" maximum="100"/>
            <items>
                <field-set name="person">
                    <label></label>
                    <occurrences minimum="0" maximum="100"/>
                    <items>
                        <input type="TextLine" name="name">
                            <label>Name</label>
                            <occurrences minimum="1" maximum="1"/>
                            <help-text></help-text>
                        </input>
                        <input type="TextLine" name="jobTitle">
                            <label>Job title</label>
                            <occurrences minimum="1" maximum="1"/>
                            <help-text></help-text>
                        </input>
                        <input type="ImageSelector" name="image">
                            <label>Image</label>
                            <immutable>false</immutable>
                            <indexed>false</indexed>
                            <occurrences minimum="0" maximum="1"/>
                            <config></config>
                            <help-text></help-text>
                        </input>
                        <input type="TextLine" name="twitter">
                            <label>Twitter</label>
                            <occurrences minimum="0" maximum="1"/>
                            <help-text></help-text>
                        </input>
                        <input type="TextLine" name="facebook">
                            <label>Facebook</label>
                            <occurrences minimum="0" maximum="1"/>
                            <help-text></help-text>
                        </input>
                        <input type="TextLine" name="linkedin">
                            <label>Linkedin</label>
                            <occurrences minimum="0" maximum="1"/>
                            <help-text></help-text>
                        </input>


                    </items>
                </field-set>
            </items>
        </item-set>

    </config>
</part>