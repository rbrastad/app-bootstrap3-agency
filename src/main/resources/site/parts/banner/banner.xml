<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part>
    <display-name>Banners</display-name>

    <config>
        <item-set name="menuComponent">
            <label>Menu</label>
            <items>
                <input name="showInMenu" type="CheckBox">
                    <label>Show in menu</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
            <occurrences minimum="1" maximum="1"/>
        </item-set>
        <item-set name="banners">
            <label>Add banners</label>
            <immutable>false</immutable>
            <custom-text/>
            <help-text></help-text>
            <occurrences minimum="1" maximum="10"/>
            <items>
                <field-set name="banner">
                    <label>Banner</label>
                    <occurrences minimum="0" maximum="10"/>
                    <items>
                        <input type="TextLine" name="title">
                            <label>Title</label>
                            <occurrences minimum="0" maximum="1"/>
                            <help-text>Banner title</help-text>
                        </input>
                        <input name="body" type="TextLine">
                            <label>Text</label>
                            <occurrences minimum="0" maximum="1"/>
                            <help-text></help-text>
                        </input>
                        <input type="TextLine" name="buttonReadMoreText">
                            <label>Button read text</label>
                            <occurrences minimum="0" maximum="1"/>
                            <help-text></help-text>
                        </input>
                        <input type="TextLine" name="buttonReadMoreLink">
                            <label>Button read link</label>
                            <occurrences minimum="0" maximum="1"/>
                            <help-text></help-text>
                        </input>
                        <input type="ImageSelector" name="backgroundImage">
                            <label>Background image</label>
                            <custom-text/>
                            <help-text/>
                            <occurrences minimum="0" maximum="1"/>
                            <config/>
                        </input>
                    </items>
                </field-set>
            </items>
        </item-set>
    </config>
</part>